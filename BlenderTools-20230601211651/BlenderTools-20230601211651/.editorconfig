# EditorConfig https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,md,scss}]
indent_size = 4
indent_style = space

[*.{yaml,yml,html}]
indent_size = 2
indent_style = space

[Dockerfile]
indent_size = 4
indent_style = space
